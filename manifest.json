{
	"manifest_version": 2,
	"name": "testention",
	"version": "1.0",
	"description": "A test extention with ts/js",

	"permissions": ["tabs", "activeTab", "storage"],

	"background": {
		"scripts": ["dist/backgroundScript.js"],
		"persistent": false
	},

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["dist/contentScript.js"]
		}
	],

	"browser_action": {
		"default_popup": "dist/popup.html",
		"default_icon": {
			"64": "public/icons/icons8.png"
		}
	}
}
